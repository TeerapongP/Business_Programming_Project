@page
@model IndexModel

<body class="bg-dark">
    <section>
        <div class="container-fluid py-5 h-100 ">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="/picture/1.png"
                                     alt="pucture_form" 
                                     class="rounded float-left" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="POST" id="user_form" action="./LoginSql">
                                        @Html.AntiForgeryToken()
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Reservation Room </span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login your account</h5>


                                        <div class="form-outline mb-4">
                                            <input type="text" id="email_login" name="email_login" class="form-control form-control-lg" value="" required />
                                            <label class="form-label" for="form2Example17">Email</label>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="password" id="pass_login" name="pass_login" class="form-control form-control-lg" value="" required />
                                            <label class="form-label" for="form2Example27">Password</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <input class="btn btn-outline-warning btn-lg btn-block" type="submit" onclick="" value="Login" />
                                        </div>
                                    </form>

                                    <form action="./SignIn">
                                        <input class="btn btn-outline-info btn-lg btn-block" type="submit" value="Register" />
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

